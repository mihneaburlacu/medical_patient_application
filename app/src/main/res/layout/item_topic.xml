<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/topic_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_medium"
        android:background="@drawable/ripple_card_background"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="@dimen/general_radius"
        app:cardElevation="@dimen/general_elevation">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/number_topic_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/sh_number_topic"
                android:gravity="center"
                android:textAppearance="@style/NumberTextSize"
                tools:text="1" />

            <TextView
                android:id="@+id/name_topic_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:textAppearance="@style/FitbitInfoText"
                tools:text="Medical topic" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>